<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/onBoardingFragment">

    <fragment
        android:id="@+id/onBoardingFragment"
        android:name="com.swallow.cracker.ui.fragments.OnBoardingFragment"
        android:label="fragment_on_boarding"
        tools:layout="@layout/fragment_on_boarding">
        <action
            android:id="@+id/action_onBoardingFragment_to_logInFragment"
            app:destination="@id/authFragment"
            app:popUpTo="@id/onBoardingFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/authFragment"
        android:name="com.swallow.cracker.ui.fragments.AuthFragment"
        android:label="fragment_log_in"
        tools:layout="@layout/fragment_auth">
        <action
            android:id="@+id/action_authFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/authFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.swallow.cracker.ui.fragments.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_detailsFragment"
            app:destination="@id/detailsPostWithImageFragment" />
        <action
            android:id="@+id/action_homeFragment_to_detailPostSimpleItem"
            app:destination="@id/detailPostSimpleItem" />
    </fragment>
    <fragment
        android:id="@+id/detailsPostWithImageFragment"
        android:name="com.swallow.cracker.ui.fragments.DetailsPostWithImageFragment"
        tools:layout="@layout/fragment_details">
        <argument
            android:name="post"
            app:argType="com.swallow.cracker.ui.modal.RedditListItemWithImage" />
    </fragment>
    <fragment
        android:id="@+id/detailPostSimpleItem"
        android:name="com.swallow.cracker.ui.fragments.DetailPostSimpleItem"
        tools:layout="@layout/fragment_details">
        <argument
            android:name="post"
            app:argType="com.swallow.cracker.ui.modal.RedditListSimpleItem" />
    </fragment>
</navigation>