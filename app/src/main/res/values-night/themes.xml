<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base dark application theme -->
    <style name="Theme.Cracker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowBackground">@color/arcDarkWindow</item>
        <item name="android:textColor">@color/arcDarkText</item>
        <item name="colorPrimary">@color/arcDarkButton</item>
    </style>

    <style name="ItemListCracker">
        <item name="android:background">@color/arcDarkDark</item>
    </style>

    <style name="DotsIndicator">
        <item name="dotsColor">@color/arcWhite</item>
        <item name="selectedDotColor">@color/arcWhite</item>
    </style>

    <style name="MaterialToolbarCracker">
        <item name="android:background">@color/arcDarkDark</item>
    </style>

    <style name="MaterialToolbarProfileCracker">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="TabsCracker">
        <item name="colorPrimary">@color/arcDarkText</item>
        <item name="android:background">@color/arcDarkDark</item>
    </style>

    <style name="Container">
        <item name="android:background">@color/arcDarkDark</item>
    </style>

    <style name="Button">
        <item name="android:textColor">@color/arcDarkText</item>
    </style>

    <style name="ProgressIndicator">
        <item name="indicatorColor">@color/arcDarkHighlight</item>
        <item name="android:indeterminate">true</item>
        <item name="android:progress">@integer/material_motion_duration_medium_1</item>
        <item name="trackColor">@android:color/transparent</item>
        <item name="android:contentDescription">@string/progress_indicator</item>
    </style>

    <style name="BottomNavigationView">
        <item name="colorPrimary">@color/arcWhite</item>
        <item name="backgroundTint">@color/arcDarkDark</item>
    </style>
</resources>