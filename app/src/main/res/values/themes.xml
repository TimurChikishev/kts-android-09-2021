<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Cracker" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorOnSurface">@color/gray</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="DotsIndicator">
        <item name="colorControlNormal">@color/gray</item>
        <item name="selectedDotColor">@color/teal_200</item>
    </style>

    <style name="MaterialToolbarCracker">
        <item name="colorControlNormal">@color/white</item>
        <item name="navigationIconTint">@color/white</item>
        <item name="android:background">@color/blue</item>
    </style>

    <style name="MaterialToolbarProfileCracker">
        <item name="colorControlNormal">?attr/colorControlNormal</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>